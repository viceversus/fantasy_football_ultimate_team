source 'https://rubygems.org'

gem 'unicorn'
gem 'rails', '4.2.0.beta1'
gem 'rails-api'
gem 'pg'
gem 'jbuilder'
gem 'dotenv-rails'
gem 'responders'

group :production do
  gem 'rails_12factor'
end

group :development, :test do
  gem 'rspec'
  gem 'rspec-rails'
  gem 'annotate'
  gem 'factory_girl'
  gem 'factory_girl_rails'
  gem 'simplecov'
  gem 'database_cleaner'
  gem 'json_expressions'
  gem 'rspec-its'
  gem 'pry'
  gem 'pry-byebug'
end

group :development do
  gem 'quiet_assets'
end



